<%= form_for(new_subscription, remote: true, html: { id: 'new_subscription_form'} ) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  
  <%= f.label :url, "Enter a URL" %>
  <%= f.url_field :url, placeholder: "http://yourblog.com" %>
  
  <%= f.submit "Add new subscription", class: "subscribe_button" %>
<% end %>
