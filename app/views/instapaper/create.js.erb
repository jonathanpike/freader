var ready = function() {
  $('.new_instapaper').on('ajax:success', function(event, data, status, xhr) {
    if (<%= @instapaper.authenticate %> === true) {
      window.close();
      <% flash.each do |type, message| %>
        window.opener.$("#flash-messages").html("<%= j content_tag :p, message.html_safe, class: "flash_#{type} flash text-center" %>");
      <% end %>
    }
  });
  
  <% flash.each do |type, message| %>
    $("#flash-messages").html("<%= j content_tag :p, message.html_safe, class: "flash_#{type} flash text-center" %>");
  <% end %>
};

$(document).ready(ready);
$(document).on('page:load', ready);